{
  "$schema": "https://raw.githubusercontent.com/prompt-decorators/spec/main/schemas/extension-package.schema.json",
  "name": "finance-decorators",
  "version": "1.0.0",
  "description": "Domain-specific prompt decorators for financial applications",
  "author": {
    "name": "Finance AI Team",
    "email": "finance@example.com",
    "url": "https://finance-ai.example.com"
  },
  "license": "MIT",
  "keywords": ["finance", "prompt-decorators", "ai", "risk-disclosure", "financial-analysis"],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/finance-decorators"
  },
  "decorators": [
    {
      "decoratorName": "RiskDisclosure",
      "version": "1.0.0",
      "description": "Ensures financial risk disclosures are included in responses based on product type and jurisdiction",
      "author": {
        "name": "Finance AI Team",
        "email": "finance@example.com",
        "url": "https://finance-ai.example.com"
      },
      "parameters": [
        {
          "name": "product_type",
          "type": "enum",
          "description": "The type of financial product",
          "enum": ["investment", "loan", "insurance", "banking", "crypto"],
          "default": "investment"
        },
        {
          "name": "jurisdiction",
          "type": "enum",
          "description": "The regulatory jurisdiction",
          "enum": ["us", "eu", "uk", "international"],
          "default": "us"
        },
        {
          "name": "risk_level",
          "type": "enum",
          "description": "The level of risk disclosure detail",
          "enum": ["basic", "standard", "comprehensive"],
          "default": "standard"
        }
      ],
      "examples": [
        {
          "description": "Standard US investment risk disclosure",
          "usage": "+++RiskDisclosure(product_type=investment, jurisdiction=us, risk_level=standard)",
          "result": "Provides standard US investment risk disclosures"
        }
      ],
      "compatibility": {
        "requires": [],
        "conflicts": [],
        "models": ["gpt-4", "gpt-3.5-turbo", "claude-3"]
      }
    },
    {
      "decoratorName": "FinancialAnalysis",
      "version": "1.0.0",
      "description": "Structures responses as financial analysis following industry standards and methodologies",
      "author": {
        "name": "Finance AI Team",
        "email": "finance@example.com",
        "url": "https://finance-ai.example.com"
      },
      "parameters": [
        {
          "name": "analysis_type",
          "type": "enum",
          "description": "The type of financial analysis",
          "enum": ["fundamental", "technical", "quantitative", "esg", "risk"],
          "default": "fundamental"
        },
        {
          "name": "timeframe",
          "type": "enum",
          "description": "The analysis timeframe",
          "enum": ["short_term", "medium_term", "long_term"],
          "default": "medium_term"
        },
        {
          "name": "metrics",
          "type": "array",
          "description": "List of specific financial metrics to include"
        }
      ],
      "examples": [
        {
          "description": "Long-term fundamental analysis of a stock",
          "usage": "+++FinancialAnalysis(analysis_type=fundamental, timeframe=long_term)",
          "result": "Provides a long-term fundamental analysis structure"
        }
      ],
      "compatibility": {
        "requires": [],
        "conflicts": [],
        "models": ["gpt-4", "gpt-3.5-turbo", "claude-3"]
      }
    }
  ],
  "dependencies": {
    "standard": {
      "version": "1.0.0"
    },
    "extensions": []
  }
}
